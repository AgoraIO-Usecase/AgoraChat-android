<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >

  <LinearLayout
      android:layout_width="280dp"
      android:layout_height="218dp"
      android:background="@color/colorTextPrimary"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:layout_gravity="center"
      >
    <ImageView
        android:id="@+id/img_contact_dialog_avatar"
        android:layout_width="@dimen/contact_dialog_avatar_size"
        android:layout_height="@dimen/contact_dialog_avatar_size"
        android:layout_marginTop="25dp"
        android:src="@drawable/ease_default_avatar"
        />

    <TextView
        android:id="@+id/text_contact_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/contact_dialog_txt_margin_top"
        android:textColor="@color/contact_name_color"
        android:textSize="@dimen/contact_name_size"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_dialog_base_line_height"
        android:layout_marginTop="@dimen/contact_dialog_txt_margin_top"
        android:background="@color/base_line_color"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dp"
        >
      <ImageView
          android:id="@+id/img_contact_dialog_voice_call"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="52dp"
          android:src="@drawable/em_ic_call_white_24dp"
          android:tint="@color/header_text_color"
          />
      <ImageView
          android:id="@+id/img_contact_dialog_send_message"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_gravity="center_horizontal"
          android:src="@drawable/em_ic_tab_chats_normal"
          android:tint="@color/header_text_color"
          />
      <ImageView
          android:id="@+id/img_contact_dialog_video_call"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="51.5dp"
          android:src="@drawable/em_ic_videocam_white_24dp"
          android:tint="@color/header_text_color"
          />
    </RelativeLayout>
  </LinearLayout>

</LinearLayout>