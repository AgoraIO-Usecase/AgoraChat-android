<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sign_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/sign_input_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="main_bottom_view_normal">
        <item name="android:textColor">@color/main_color_tab_normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="main_bottom_view_selected">
        <item name="android:textColor">@color/main_color_tab_selected</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Dialog.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_main_blue</item>
    </style>

    <style name="main_badge_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:layout_marginTop">@dimen/main_badge_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/main_badge_margin_left</item>
        <item name="android:layout_marginStart">@dimen/main_badge_margin_left</item>
        <item name="android:background">@drawable/main_unread_count_bg</item>
        <item name="android:paddingStart">@dimen/main_badge_padding</item>
        <item name="android:paddingEnd">@dimen/main_badge_padding</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="transparentBottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/sheetStyle</item>
    </style>

    <style name="sheetStyle" parent="android:Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">auto</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="dialog_from_bottom_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_from_bottom_anim_in</item>
        <!-- <item name="android:windowExitAnimation">@anim/dialog_from_bottom_anim_out</item>-->
    </style>

    <style name="Button.BorderLess" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>