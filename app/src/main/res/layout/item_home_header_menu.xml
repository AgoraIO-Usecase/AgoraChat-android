<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <io.agora.chatdemo.general.widget.ArrowItemView
        android:id="@+id/item_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_arrow_item_view_height"
        app:arrowItemTitle="Good"
        app:arrowItemTitleSize="@dimen/text_size_big"
        app:arrowItemAvatarSrc="@drawable/new_group"
        app:arrowItemShowAvatar="true"
        app:arrowItemAvatarHeight="40dp"
        app:arrowItemAvatarWidth="40dp"
        app:arrowItemShowArrow="true"/>

    <TextView
        android:id="@+id/tv_contact_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:text="@string/group_contacts"
        android:textColor="@color/color_light_gray_999999"
        android:layout_below="@id/item_menu"
        android:layout_marginTop="2dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:visibility="gone"/>

</RelativeLayout>