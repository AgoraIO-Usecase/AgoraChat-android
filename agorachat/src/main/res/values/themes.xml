<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HyphenateDemoAndroid" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <!-- Customize your theme here. -->
        <!-- Customize EditText text color -->
        <item name="android:editTextColor">@color/black</item>
        <!-- Customize text cursor -->
        <item name="android:textCursorDrawable">@drawable/demo_text_cursor_drawable</item>
        <!-- Customize text color hint -->
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="android:windowBackground">@color/color_window_bg</item>
        <item name="android:divider">@drawable/demo_default_divider_list</item>
        <!-- remove button default shadow effect -->
        <!--<item name="android:buttonStyle">@style/Button.BorderLess</item>-->
    </style>

    <style name="Theme.Launcher" parent="Theme.HyphenateDemoAndroid">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
</resources>