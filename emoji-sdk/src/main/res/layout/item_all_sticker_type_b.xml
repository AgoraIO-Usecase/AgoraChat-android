<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="7dp"
        android:gravity="center">

        <io.stipop.custom.StipopImageView
            android:id="@+id/packageIV"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical">

            <io.stipop.custom.StipopTextView
                android:id="@+id/packageNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="#374553"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineHeight="22sp"
                android:text=""/>

            <io.stipop.custom.StipopTextView
                android:id="@+id/artistNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#646f7c"
                android:textSize="12sp"
                android:lineHeight="20sp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/downloadLL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <io.stipop.custom.StipopImageView
                android:id="@+id/downloadIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_download_border_3"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>