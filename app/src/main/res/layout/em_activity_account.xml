<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ml_layout_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/em_white_87"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.sign.SignInActivity"
    >

    <!--Include communal Toolbar-->
    <include layout="@layout/em_widget_toolbar_communal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            >

            <com.hyphenate.easeui.widget.EaseImageView
                android:id="@+id/img_account_avatar"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ease_default_avatar"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_edit_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_account_avatar"
                android:layout_alignRight="@id/img_account_avatar"
                android:src="@drawable/em_ic_mode_edit_white_24dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/em_black_12"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:padding="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hyphenate ID:"
                android:textColor="@color/em_black_87"
                />
            <TextView
                android:id="@+id/text_hyphenate_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="lzan13"
                android:textColor="@color/em_black_54"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/em_black_12"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/em_btn_rectangle_white"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"
                android:text="@string/em_sign_out"
                android:textColor="@color/em_red_87"
                />
        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>