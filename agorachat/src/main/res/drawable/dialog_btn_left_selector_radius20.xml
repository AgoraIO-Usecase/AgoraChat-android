<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/dialog_color_btn_bg_select" />
                    <corners android:bottomLeftRadius="20dp" />
                    <stroke android:color="@color/dialog_change_nickname_divider" />
                </shape>
            </item>
            <item android:right="0.5dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/dialog_color_btn_bg_select" />
                    <corners android:bottomLeftRadius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/dialog_color_btn_bg_normal" />
                    <corners android:bottomLeftRadius="20dp" />
                    <stroke android:width="1dp" android:color="@color/dialog_change_nickname_divider" />
                </shape>
            </item>
            <item android:right="0.5dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/dialog_color_btn_bg_normal" />
                    <corners android:bottomLeftRadius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>