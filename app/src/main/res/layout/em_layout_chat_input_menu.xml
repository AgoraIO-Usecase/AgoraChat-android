<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_input_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@color/em_white_100"
    android:gravity="center_vertical"
    android:minHeight="56dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/img_mic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/chat_input_img_padding"
        android:paddingRight="@dimen/chat_input_img_padding"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/em_ic_chat_mic_selector"
        />

    <EditText
        android:id="@+id/edt_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:hint="@string/chat_edit_hint"
        android:maxLines="3"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        />


    <ImageView
        android:id="@+id/img_emojicon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/em_chat_emoji_selector"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        >
        <ImageView
            android:id="@+id/img_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:src="@drawable/em_ic_chat_send"
            android:paddingRight="10dp"
            android:paddingLeft="6dp"
            />

        <ImageView
            android:id="@+id/img_expand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/em_ic_chat_expand"
            android:paddingRight="10dp"
            android:paddingLeft="6dp"
            />

    </FrameLayout>

</LinearLayout>