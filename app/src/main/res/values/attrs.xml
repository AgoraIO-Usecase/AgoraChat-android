<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EaseSidebar">
        <attr name="ease_side_bar_top_text" format="reference|string"/>
        <attr name="ease_side_bar_text_color" format="reference|color"/>
        <attr name="ease_side_bar_text_size" format="dimension"/>
        <attr name="ease_side_bar_background" format="reference|color"/>
        <attr name="ease_side_bar_focus_bg_color" format="reference|color"/>
        <attr name="ease_side_bar_delay_disappear_time" format="reference|integer"/>
        <attr name="ease_side_bar_head_arrays" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ArrowItemView">
        <attr name="arrowItemTitle" format="string|reference"/>
        <attr name="arrowItemTitleColor" format="color|reference"/>
        <attr name="arrowItemTitleSize" format="dimension|reference"/>
        <attr name="arrowItemTitleStyle" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        <attr name="arrowItemContent" format="string|reference"/>
        <attr name="arrowItemContentColor" format="color|reference"/>
        <attr name="arrowItemContentSize" format="dimension|reference"/>
        <attr name="arrowItemShowDivider" format="boolean"/>
        <attr name="arrowItemShowArrow" format="boolean"/>
        <attr name="arrowItemShowAvatar" format="boolean"/>
        <attr name="arrowItemAvatarSrc" format="reference"/>
        <attr name="arrowItemArrowSrc" format="reference"/>
        <attr name="arrowItemAvatarHeight" format="dimension|reference"/>
        <attr name="arrowItemAvatarWidth" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="EaseSearchTextView">
        <attr name="search_drawable_left_width" format="dimension"/>
        <attr name="search_drawable_left_height" format="dimension"/>
        <attr name="search_drawable_right_width" format="dimension"/>
        <attr name="search_drawable_right_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="EaseSearchEditText">
        <attr name="search_edit_drawable_left_width" format="dimension"/>
        <attr name="search_edit_drawable_left_height" format="dimension"/>
        <attr name="search_edit_drawable_right_width" format="dimension"/>
        <attr name="search_edit_drawable_right_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SwitchItemView">
        <attr name="switchItemTitle" format="string|reference"/>
        <attr name="switchItemTitleColor" format="color|reference"/>
        <attr name="switchItemTitleSize" format="dimension|reference"/>
        <attr name="switchItemTitleStyle" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        <attr name="switchItemShowDivider" format="boolean"/>
        <attr name="switchItemHint" format="string|reference"/>
        <attr name="switchItemCheckEnable" format="boolean"/>
        <attr name="switchItemClickable" format="boolean"/>
        <attr name="switchItemShowAvatar" format="boolean"/>
        <attr name="switchItemAvatarSrc" format="reference"/>
        <attr name="switchItemAvatarHeight" format="dimension|reference"/>
        <attr name="switchItemAvatarWidth" format="dimension|reference"/>
    </declare-styleable>
</resources>